<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.led_on_off.led.ledControl">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/soil_humidity"
            style="?android:attr/progressBarStyle"
            android:layout_width="99dp"
            android:layout_height="85dp"
            android:layout_marginTop="68dp"
            android:max="100"
            android:min="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/humidity"
            style="?android:attr/progressBarStyle"
            android:layout_width="99dp"
            android:layout_height="85dp"
            android:layout_marginTop="68dp"
            android:max="100"
            android:min="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="@string/default_temperature"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plant_control_title"
            android:layout_width="382dp"
            android:layout_height="35dp"
            android:text="Plant Control"
            android:textSize="24sp" />

        <Button
            android:id="@+id/dis_btn"
            android:layout_width="378dp"
            android:layout_height="51dp"
            android:fadingEdge="none"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Disconnect"
            tools:typeface="normal" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="352dp"
            android:layout_height="46dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="243dp" />

        <Button
            android:id="@+id/instance_watering"
            android:layout_width="291dp"
            android:layout_height="50dp"
            android:layout_marginBottom="60dp"
            android:text="Water Now"
            app:layout_constraintBottom_toBottomOf="@+id/dis_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
